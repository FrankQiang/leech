nethack on

# Emacs keybindings on C-a [
markkeys "h=^B:l=^F:$=^E"

caption always "%{= kw}%-w%{= gW}%n %t%{-}%+w %-= %{= r}%H%{-} %{= g}%l%{-} %D %Y-%m-%d %c:%s"

# window numbering should start at 1, not 0
bind c screen 1
bind 0 select 10

# let root connect to this session, so we can do "sudo screen -x leech/"
# to attach without having to log in as the leech user first
multiuser on
acladd root

screen -t torrent 1 rtorrent
screen -t bondage 2 bondage -d -w ~/utor/
screen -t utor    3 utor/torrent-announce
select 1
detach
